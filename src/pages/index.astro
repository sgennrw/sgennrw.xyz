---
// Component Imports
import MainLayout from "../layouts/main.astro";
import Card from "../components/Card.astro";
import SocialLink from "../components/SocialLink.astro";

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/

const PAGE_TITLE = "sgennrw";
---

<MainLayout content={{ title: PAGE_TITLE }}>
  <div
    class="grid h-[calc(100vh-var(--navbar-height))] place-items-center content-center px-[var(--container-px)] pb-[var(--navbar-height)]"
  >
    <Card>
      <div
        class="m-4 h-52 w-auto flex-none overflow-hidden bg-white bg-[url('/assets/profile-img.png')] bg-[length:180px_180px] bg-center bg-no-repeat text-center lg:h-auto lg:w-48 lg:bg-[length:150px_150px]"
        title={PAGE_TITLE}
      >
      </div>
      <div
        class="flex flex-col justify-between p-4 pt-0 leading-normal lg:pt-4"
      >
        <div class="mb-5">
          <p class="flex items-center text-base text-gray-400">
            👩‍💻📚🎨✏️☕🌃🌙🐱🇹🇭🏳️‍🌈
          </p>
          <div class="mb-2 text-xl font-bold text-gray-900">
            Salisa Cheawcharnthong
          </div>
          <p class="text-base text-gray-700">
            A Software Engineer, a human, a cat person, a coffeeholic, a
            homebody, a night owl pretending to be an early bird, a code
            breaker, and a problem
            <i class="text-gray-400 line-through">solver</i> creator.
          </p>
        </div>
        <div class="flex items-center gap-2">
          <SocialLink icon={"github"} href={"https://github.com/sgennrw"} />
          <SocialLink icon={"medium"} href={"https://medium.com/@salisa.cct"} />
          <SocialLink
            icon={"linkedin"}
            href={"https://www.linkedin.com/in/salisa-cct/"}
          />
          <SocialLink icon={"twitter"} href={"https://twitter.com/sgennrw"} />
        </div>
      </div>
    </Card>
  </div>
</MainLayout>
