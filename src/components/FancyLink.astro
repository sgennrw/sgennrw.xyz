---
const { props } = Astro;
---

<a {...props} target="_blank" rel="noreferrer noopener" class="link-fancy">
  <slot />
</a>

<style>
  .link-fancy {
    @apply bg-gradient-to-r from-sky-500 via-indigo-500 to-sky-500 bg-clip-text
      font-medium text-sky-500
      hover:animate-[fancyLinkText_1s_ease_forwards] hover:text-transparent;
    /** for supporting .link-fancy::after */
    @apply relative inline-flex w-fit flex-col hover:after:w-full;
  }

  .link-fancy::after {
    content: "";
    transition: all 0.5s ease-in-out;
    @apply absolute right-0 bottom-0 h-[2px] w-0 bg-gradient-to-r from-sky-500 to-indigo-500;
  }
</style>
